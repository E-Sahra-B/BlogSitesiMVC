@model Writer
@{
    ViewData["Title"] = "Index";
}
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle" style="color:#01cd73">Yazar Kayıt</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Adınız Soyadınız</label>
                            <input type="text" asp-for="WriterName" class="form-control" />
                            <span asp-validation-for="WriterName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Mail Adresi</label>
                            <input type="text" asp-for="WriterMail" class="form-control" />
                            <span asp-validation-for="WriterMail" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Şifre</label>
                            <input type="password" asp-for="WriterPassword" class="form-control" />
                            <span asp-validation-for="WriterPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Görsel Dosya Yolu</label>
                            <input type="text" asp-for="WriterImage" class="form-control" />
                            <span asp-validation-for="WriterImage" class="text-danger"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
                    <p>
                        <a href="#">Tüm şartları okudum, kabul ediyorum.</a>
                    </p>
                }
            </div>
        </div>
    </div>
</section>