@model List<AppUser>
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Hakkında</h4>
                <div class="d-flex mt-5 align-items-top">
                    @ViewBag.veri
                    @foreach (var item in Model)
                    {

                        <img src="@item.ImageUrl" class="img-sm rounded-circle mr-3" alt="image" asp-append-version="true">
                        <div class="mb-0 flex-grow">
                            <h5 class="mr-2 mb-2">@item.NameSurname - @item.Email</h5>

                        </div>
                    }
                        <div class="ml-auto">
                            <i class="mdi mdi-heart-outline text-muted"></i>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>