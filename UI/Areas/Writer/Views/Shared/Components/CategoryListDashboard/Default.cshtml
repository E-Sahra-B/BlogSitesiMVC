@model List<Category>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Project Status</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Kategori Adı </th>
                                <th> Durumu </th>
                                <th> İşlemler </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td> @item.CategoryID </td>
                                <td>
                                    @if (item.CategoryName == "Tiyatro")
                                    {
                                        <p class="badge badge-warning">Tiyatro</p>
                                    }
                                    @if (item.CategoryName == "Yazılım")
                                    {
                                        <p class="badge badge-success">Yazılım</p>
                                    }
                                    @if (item.CategoryName == "Teknoloji")
                                    {
                                        <p class="badge badge-primary">Teknoloji</p>
                                    }
                                    @if (item.CategoryName == "Oyun")
                                    {
                                        <p class="badge badge-secondary">Oyun</p>
                                    }
                                    @if (item.CategoryName == "sinema")
                                    {
                                        <p class="badge badge-info">sinema</p>
                                    }
                                </td>
                                <td>
                                    @if (@item.CategoryStatus)
                                    {
                                        <p class="badge badge-success">Aktif</p>
                                    }
                                    else
                                    {
                                        <p class="badge badge-secondary">Pasif</p>
                                    }
                                </td>
                                <td>
                                    <div class="progress">
                                       <div class="progress-bar bg-gradient-danger" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>