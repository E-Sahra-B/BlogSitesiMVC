@model List<Blog>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son 10 Blog</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Başlık </th>
                                <th> Kategori </th>
                                <th> Tarih </th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.BlogImage" class="mr-2" alt="image"> 
                                        </td>
                                        <td>@item.BlogTitle
                                    </td>
                                    <td>
                                            @if (item.Category.CategoryName == "Tiyatro")
                                            {
                                                <p class="badge badge-warning">Tiyatro</p>
                                            }
                                            @if (item.Category.CategoryName == "Yazılım")
                                            {
                                                <p class="badge badge-success">Yazılım</p>
                                            }
                                            @if (item.Category.CategoryName == "Teknoloji")
                                            {
                                                <p class="badge badge-primary">Teknoloji</p>
                                            }
                                            @if (item.Category.CategoryName == "Oyun")
                                            {
                                                <p class="badge badge-secondary">Oyun</p>
                                            }
                                            @if (item.Category.CategoryName == "sinema")
                                            {
                                                <p class="badge badge-info">sinema</p>
                                            }
                                    </td>
                                    <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</td>
                                <td>
                                    <a href="/Blog/BlogReadAll/@item.BlogID" class="btn-sm btn-dark">Detaylar</a>
                                </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>