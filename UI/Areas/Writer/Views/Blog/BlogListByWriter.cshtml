@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
}
<h1>Yazarın Blogları</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluşturulma Tarihi</th>
        <th>Kategori</th>
        <th>Durumu</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.BlogID</th>
            <td>@item.BlogTitle</td>
            <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</td>
            <td>@item.Category.CategoryName</td>
            <td>
                @if (@item.BlogStatus)
                {
                    <p class="badge badge-success">Aktif</p>
                }
                else
                {
                    <p class="badge badge-secondary">Pasif</p>
                }
            </td>
            <td><a href="/Writer/Blog/BlogDelete/@item.BlogID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Writer/Blog/BlogEdit/@item.BlogID" class="btn btn-warning">Düzenle</a></td>
        </tr>
    }
</table>
<a href="/Writer/Blog/BlogAdd/" class="btn btn-primary">Yeni Blog Oluştur</a>
