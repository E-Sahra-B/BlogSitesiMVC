@model List<Message2>
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Areas/Writer/Views/Shared/WriterLayout.cshtml";
}
<h1>Giden  Kutusu</h1>
<table class="table table-bordered">
    <tr>
        <th scope="row">#</th>
        <th>Konu</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">@item.MessageID</th>
            <td>@item.Subject</td>
            <td>@item.ReceiverUser.WriterName</td>
            <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>
            <td><a href="/Writer/Message/MessageDetails?id=@item.MessageID" class="btn btn-success">Mesajı Aç</a></td>
        </tr>
    }
</table>
<a href="#" class="btn btn-primary">Yeni Mesaj Oluştur</a>